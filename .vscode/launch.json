{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ SmartQuest API - Direct Run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\app\\main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}\\.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true
        },
        {
            "name": "üîç FastAPI with Uvicorn",
            "type": "debugpy", 
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host", "127.0.0.1",
                "--port", "8000",
                "--reload",
                "--log-level", "debug"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}\\.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        },
        {
            "name": "üß™ Test Azure AI",
            "type": "debugpy",
            "request": "launch", 
            "program": "${workspaceFolder}\\test_azure_only.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}\\.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": false
        }
    ]
}
